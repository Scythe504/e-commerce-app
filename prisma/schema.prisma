model Item {
  id          String         @id @default(cuid())
  title       String
  description String?
  price       Float
  cartId  String
  cart   Cart?  @relation(fields: [cartId], references: [id])
  @@unique([id, cartId])
}


model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  usersCart User       @relation(fields: [userId], references: [id])
  items Item[]
}

enum methodSignin {
  GOOGLE
  EMAIL
}
