generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String       @id @default(cuid())
  email              String       @unique
  password           String
  signInCredentials  methodSignin @default(EMAIL)
  emailVerified      Boolean?      @default(false)
  dateOfVerification DateTime?
  // purchases          Purchase[]
  Cart               Cart[]
}

